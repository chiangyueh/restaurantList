<div class="container add-form-bg">
    {{#if restaurantlist}}
    <h1>修改您的表單</h1>
    {{else}}
    <h1>快填寫表單，新增你最愛的餐廳吧！</h1>
    {{/if}}
    <form 
    {{#if restaurantlist}}
    action="/restaurants/{{ restaurantlist._id }}?_method=PUT"
    {{else}}
    action="/restaurants/add" 
    {{/if}}
    method="POST" 
    class="restaurant-add-form">
        <label for="name">
            <span>餐廳名稱</span>
            <span>*</span>
        </label>
        <input type="text" name="name" id="name" placeholder="中文名稱" required {{#if restaurantlist.name }} value='{{restaurantlist.name}}' {{/if}}>

        <label for="name_en">
            <span>餐廳英文名稱</span>
            <span>*</span>
        </label>
        <input type="text" name="name_en" id="name_en" placeholder="英文名稱" required {{#if restaurantlist.name_en }} value='{{restaurantlist.name_en}}' {{/if}}>

        <label for="id">
            <span>餐廳編號</span>
        </label>
        <input type="number" name="id" id="id" placeholder="餐廳編號" {{#if restaurantlist.id }} value={{restaurantlist.id}} {{/if}}>

        <label for="category">
            <span>餐廳類別</span>
            <span>*</span>
        </label>
        <input type="text" name="category" id="category" placeholder="日本料理、港式料理" required {{#if restaurantlist.category }} value='{{restaurantlist.category}}' {{/if}}>

        <label for="image">
            <span>餐廳照片網址</span>
        </label>
        <input type="url" name="image" id="image" placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg" {{#if restaurantlist.image }} value={{restaurantlist.image}} {{/if}}>

        <label for="location">
            <span>餐廳地點</span>
        </label>
        <input type="text" name="location" id="location" placeholder="110 台北市信義區忠孝東路五段139號2樓" {{#if restaurantlist.location }} value='{{restaurantlist.location}}' {{/if}}>

        <label for="phone">
            <span>餐廳電話</span>
        </label>
        <input type="tel" name="phone" id="phone" placeholder="手機0912 345 678 或 市話02 1234 5678" 
        pattern="^09\d{2}\s\d{3}\s\d{3}$|^02\s\d{4}\s\d{4}$"
        {{#if restaurantlist.phone }} value='{{restaurantlist.phone}}' {{/if}}>

        <label for="google_map">
            <span>Google Map</span>
        </label>
        <input type="url" name="google_map" id="google_map" placeholder="https://goo.gl/maps/BJdmLuVdDbw" {{#if restaurantlist.google_map }} value='{{restaurantlist.google_map}}' {{/if}}>

        <label for="rating">
            <span>餐廳評分</span>
        </label>
        <input type="number" name="rating" id="rating" placeholder="4.5" step="0.1" max="5" min="0" {{#if restaurantlist.rating }} value={{restaurantlist.rating}} {{/if}}>

        <label for="description">
            <span>餐廳簡介</span>
            <span>*</span>
        </label>
        <textarea type="textarea" name="description" id="description" required>{{#if restaurantlist.description }}{{restaurantlist.description}}{{/if}}</textarea> 
		
        <button type="submit" class="restaurant-add-submit">提交</button>
    </form>
</div>